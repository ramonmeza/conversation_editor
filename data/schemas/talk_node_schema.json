{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/ramonmeza/conversation_editor/main/data/schemas/talk_node_schema.json",
    "title": "Talk Node Schema",
    "type": "object",
    "required": [
        "speaker",
        "text"
    ],
    "properties": {
        "speaker": {
            "title": "Name of the speaker",
            "type": "string",
            "examples": [
                "Player"
            ]
        },
        "text": {
            "title": "Dialogue to be spoken.",
            "type": "string",
            "examples": [
                "Hey there, you don't look like you're from around here."
            ]
        }
    },
    "examples": [
        {
            "speaker": "Player",
            "text": "Hey there, you don't look like you're from around here."
        }
    ]
}