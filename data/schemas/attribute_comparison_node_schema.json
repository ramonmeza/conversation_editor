{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/ramonmeza/conversation_editor/main/data/schemas/attribute_comparison_node_schema.json",
    "title": "Attribute Comparison Node Schema",
    "type": "object",
    "required": [
        "operator",
        "attribute",
        "value"
    ],
    "properties": {
        "operator": {
            "title": "Comparison operator to be used.",
            "type": "string",
            "examples": [
                "==",
                "!=",
                "<",
                "<=",
                ">",
                ">="
            ]
        },
        "attribute": {
            "title": "Name of the attribute to compare the value against.",
            "type": "string",
            "examples": [
                "Health"
            ]
        },
        "value": {
            "title": "The value to compare the attribute against.",
            "type": "integer",
            "examples": [
                0
            ]
        }
    },
    "examples": [
        {
            "operator": "<",
            "attribute": "Health",
            "value": 100
        }
    ]
}